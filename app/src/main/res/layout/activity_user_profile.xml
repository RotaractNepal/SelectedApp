<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.UserProfileActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewOnProfile"
                android:layout_width="326dp"
                android:layout_height="266dp"
                android:layout_marginLeft="30sp"
                android:contentDescription="@string/imageDesc"
                app:srcCompat="@drawable/ic_profile_male" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/userDetails"
                android:orientation="vertical"
                android:paddingLeft="30sp"
                android:paddingRight="30sp"
                android:paddingTop="15sp"
                android:textAlignment="gravity">

                <TextView
                    android:id="@+id/NameOnProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="25sp"
                    android:paddingRight="25sp"
                    android:text="Full Name"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/AddressOnProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="25sp"
                    android:paddingRight="25sp"
                    android:paddingTop="10sp"
                    android:text="Address"
                    android:textAlignment="center"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/StatusOnProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="25sp"
                    android:paddingRight="25sp"
                    android:paddingTop="30sp"
                    android:text="Status"
                    android:textAlignment="center"
                    android:textSize="15sp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btnSendMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_marginTop="50dp"
                        android:background="@color/black"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:visibility="gone"
                        android:textColor="@color/white"
                        android:textSize="16sp"

                        />

                    <Button
                        android:id="@+id/btnSendRequest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_marginTop="50dp"
                        android:background="@color/black"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:visibility="gone"
                        android:textColor="@color/white"
                        android:textSize="16sp"

                        />
                </FrameLayout>

                <Button
                    android:id="@+id/btnUnFriend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/black"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:visibility="gone"

                    />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
