<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:id="@+id/aboutUsImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/rackne_clubmember"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@id/aboutUsContact"
        android:gravity="center"
        android:layout_marginBottom="10dp">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/rotaractnepalapp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp">
            <TextView
                android:id="@+id/aboutUsName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/name"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/aboutUsProfession"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/profession"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/aboutUsAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/address"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/aboutUsContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_alignBottom="@id/aboutUsImage"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:gravity="center_vertical|center_horizontal">
            <ImageView
                android:id="@+id/aboutUscall"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_call"
                android:clickable="true"
                android:focusable="true" />
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/aboutUscall"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:gravity="center"
                android:text="@string/call"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:gravity="center_vertical|center_horizontal">
            <ImageView
                android:id="@+id/aboutUsemail"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_email"
                android:clickable="true"
                android:focusable="true" />
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/aboutUsemail"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:gravity="center"
                android:text="@string/email"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:gravity="center_vertical|center_horizontal">
            <ImageView
                android:id="@+id/aboutUscancel"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_cancel"
                android:clickable="true"
                android:focusable="true" />
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_below="@id/aboutUscancel"
                android:textStyle="bold"
                android:gravity="center"
                android:text="@string/close"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>