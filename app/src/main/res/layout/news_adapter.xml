<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/round_rect_bg"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/newsImage"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:src="@drawable/mero_sip"
            android:scaleType="fitXY"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:alpha="0.5"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/newsTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="10dp"
                android:gravity="center_vertical"
                android:text="@string/news_title"
                android:maxLines="1"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cardNews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/newsImage"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="@android:color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textStyle="bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:text="@string/project_detail"
                android:layout_marginStart="5dp"
                android:drawableLeft="@drawable/ic_details"
                android:drawableTint="@color/main_color_gray"/>

            <com.codesgood.views.JustifiedTextView
                android:id="@+id/newsDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="23dp"
                android:layout_marginRight="10dp"
                android:text="@string/news_description"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/Venue"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textStyle="bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:text="@string/venue"
                android:layout_marginStart="5dp"
                android:layout_below="@id/newsDescription"
                android:drawableLeft="@drawable/ic_location"
                android:drawableTint="@color/main_color_gray"/>

            <TextView
                android:id="@+id/newsLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Venue"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/news_location"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />

            <LinearLayout
                android:id="@+id/newsDateType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/newsLocation"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_district_calendar"
                    android:backgroundTint="@color/main_color_gray"/>

                <TextView
                    android:id="@+id/newsDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/news_date"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                    android:textStyle="bold" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/ic_type"
                    android:backgroundTint="@color/main_color_gray"/>

                <TextView
                    android:id="@+id/newsType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/news_type"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/newsObjectBenefici"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/newsDateType"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:textStyle="bold"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                    android:text="@string/objectives"
                    android:drawableLeft="@drawable/ic_objective"
                    android:drawableTint="@color/main_color_gray"/>

                <com.codesgood.views.JustifiedTextView
                    android:id="@+id/newsObjectives"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/objectives"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:textStyle="bold"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                    android:text="@string/beneficiaries"
                    android:drawableLeft="@drawable/ic_beneficiaries"
                    android:drawableTint="@color/main_color_gray"/>

                <TextView
                    android:id="@+id/newsBeneficiaries"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/beneficiaries"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:textStyle="bold"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                    android:text="@string/project_club_name"
                    android:drawableLeft="@drawable/ic_club_name"
                    android:drawableTint="@color/main_color_gray"/>

                <TextView
                    android:id="@+id/newsClubName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/project_club_name"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                    android:layout_marginBottom="5dp"/>

            </LinearLayout>
        </RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/newsClubLogo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignEnd="@id/newsImage"
            android:layout_marginTop="155dp"
            android:layout_marginEnd="28dp"
            android:src="@drawable/colorlogo_rotaractnepalapp"
            app:civ_border_color="@android:color/white"
            app:civ_border_width="2dp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>